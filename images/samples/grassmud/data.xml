<set size="5">
  <tiles>
    <tile name="grass_middle" symmetry="X" weight="1.0"/>
    <tile name="mud_middle"   symmetry="X" weight="1.0"/>

    <!-- straight seam + its flipped mirror -->
    <tile name="edge_gm"      symmetry="I" weight="0.6"/>  <!-- grass | mud -->
    <tile name="edge_mg"      symmetry="I" weight="0.6"/>  <!-- mud   | grass -->

    <!-- quarter-turn; rotations supply the other 3 corners -->
    <tile name="corner_mud"   symmetry="L" weight="0.9"/>
  </tiles>
    <neighbors>
  <!-- solids continue -->
  <neighbor left="grass_middle" right="grass_middle"/>
  <neighbor top="grass_middle"  bottom="grass_middle"/>
  <neighbor left="mud_middle"   right="mud_middle"/>
  <neighbor top="mud_middle"    bottom="mud_middle"/>

  <!-- base horizontal transitions; rotation gives vertical ones -->
  <neighbor left="grass_middle" right="edge_gm"/>
  <neighbor left="edge_gm"      right="mud_middle"/>

  <neighbor left="mud_middle"   right="edge_mg"/>
  <neighbor left="edge_mg"      right="grass_middle"/>

  <!-- force seams to be able to turn (DOWN options) using ROTATED corners -->
  <!-- (important: use corner 1 and 3 here so @1/@3 appear) -->
  <neighbor top="edge_gm" bottom="corner_mud 1"/>
  <neighbor top="edge_mg" bottom="corner_mud 3"/>

  <!-- corner bridges LR only (rotation supplies TB); this keeps corner orientations distinct -->
  <neighbor left="grass_middle" right="corner_mud"/>
  <neighbor left="corner_mud"   right="mud_middle"/>

  <!-- optional: allow seams to continue a bit horizontally; remove if stripes return -->
  <neighbor left="edge_gm" right="edge_gm"/>
  <neighbor left="edge_mg" right="edge_mg"/>
</neighbors>

</set>


