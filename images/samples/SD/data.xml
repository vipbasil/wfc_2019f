<set size="10">
  <tiles>
    <tile name="desert_center" symmetry="X" weight="3.0"/>
    <tile name="desert_top" symmetry="X" weight="1.0"/>
    <tile name="desert_bottom" symmetry="X" weight="1.0"/>
    <tile name="desert_left" symmetry="X" weight="1.0"/>
    <tile name="desert_right" symmetry="X" weight="1.0"/>
    <tile name="desert_top_left" symmetry="X" weight="0.8"/>
    <tile name="desert_top_right" symmetry="X" weight="0.8"/>
    <tile name="desert_bottom_left" symmetry="X" weight="0.8"/>
    <tile name="desert_bottom_right" symmetry="X" weight="0.8"/>
    <tile name="dirt_full" symmetry="X" weight="2.0"/>
  </tiles>

  <neighbors>
    <!-- Center connects to all surrounding desert edges -->
    <neighbor left="desert_center" right="desert_left"/>
    <neighbor right="desert_center" left="desert_right"/>
    <neighbor up="desert_center" down="desert_top"/>
    <neighbor down="desert_center" up="desert_bottom"/>

    <!-- Center connects to corners diagonally -->
    <neighbor left="desert_top" right="desert_top_left"/>
    <neighbor right="desert_top" left="desert_top_right"/>
    <neighbor left="desert_bottom" right="desert_bottom_left"/>
    <neighbor right="desert_bottom" left="desert_bottom_right"/>

    <!-- Edges connect logically -->
    <neighbor left="desert_left" right="desert_center"/>
    <neighbor right="desert_right" left="desert_center"/>
    <neighbor up="desert_top" down="desert_center"/>
    <neighbor down="desert_bottom" up="desert_center"/>

    <!-- Corners connect to matching edges -->
    <neighbor right="desert_top_left" left="desert_top"/>
    <neighbor down="desert_top_left" up="desert_left"/>

    <neighbor left="desert_top_right" right="desert_top"/>
    <neighbor down="desert_top_right" up="desert_right"/>

    <neighbor right="desert_bottom_left" left="desert_bottom"/>
    <neighbor up="desert_bottom_left" down="desert_left"/>

    <neighbor left="desert_bottom_right" right="desert_bottom"/>
    <neighbor up="desert_bottom_right" down="desert_right"/>

    <!-- Outer edges and corners blend into dirt -->
    <neighbor left="desert_left" right="dirt_full"/>
    <neighbor right="desert_right" left="dirt_full"/>
    <neighbor up="desert_top" down="dirt_full"/>
    <neighbor down="desert_bottom" up="dirt_full"/>

    <neighbor right="desert_top_left" left="dirt_full"/>
    <neighbor left="desert_top_right" right="dirt_full"/>
    <neighbor right="desert_bottom_left" left="dirt_full"/>
    <neighbor left="desert_bottom_right" right="dirt_full"/>

    <!-- Dirt connects to itself -->
    <neighbor left="dirt_full" right="dirt_full"/>
    <neighbor up="dirt_full" down="dirt_full"/>
    <neighbor right="dirt_full" left="dirt_full"/>
    <neighbor down="dirt_full" up="dirt_full"/>
  </neighbors>
</set>